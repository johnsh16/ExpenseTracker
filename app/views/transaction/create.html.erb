<h1>Transactions</h1>
<h3>Add a transaction</h3>

<%= form_with model: @transactions do |form| %>
    <div>
        <%= form.label :date %>
        <%= form.date_select :date %>
    </div>

    <div> 
        <%= form.label :description %>
        <%= form.text_field :description%>
    </div>

    <div>
        <%= form.label :type %>
        <%= form.select :trans_type, ["credit", "debit"] %>
    </div>

    <div>
        <%= form.label :amount %>
        <%= form.number_field :amount, in: 0.00..100000.00, step: 0.01 %>
    </div>

    <div>
        <%= form.submit %>
    </div>

    <div>
        <% if @unprocessable_entity != nil %>
            <h4>Error</h4>
        <% end %>
    </div>
<% end %>