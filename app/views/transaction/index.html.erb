<h1>Transactions</h1>

<% if @transactions != nil %>
    <ul>
        <% @transactions.each do |transaction| %>
            <li>
                date: <%= transaction.date %>, id: <%= transaction.id %>, amount: <%= transaction.amount %>, account: <%= transaction.account %>. 
            </li>
        <% end %>
    </ul>
<% else %> 
    <h3>You have no transactions</h3>
<% end %>

<a href="/transaction/new">Add a transaction</a>
